<h2>Product listing</h2>
<%= link_to "New Product", new_product_path, class: 'btn btn-success' %>
<button id="export" class="btn btn-danger">Export products as spreadsheet</button>
<div class="export-status text-success"></div>

<a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Filters</a>
<div class="collapse" id="collapseExample">
  	<div class="card card-body">
    	<%= form_tag products_path, :method => 'get', class: "form-inline", remote: true do %>
			<%= hidden_field_tag :search, 'YES' %>
			Brand : <%= text_field_tag :brand, params[:brand], class: "form-control mb-2 mr-sm-2"%>
			Model : <%= text_field_tag :model, params[:model], class: "form-control mb-2 mr-sm-2"%>
			Ram : <%= text_field_tag :ram, params[:ram], class: "form-control mb-2 mr-sm-2"%>
			Storage: <%= text_field_tag :ext_storage, params[:ext_storage], class: "form-control mb-2 mr-sm-2"%>
			<%= submit_tag "Search", class: 'btn btn-primary mb-2' %>
		<% end %>
  	</div>
</div>
<hr/>
<div id="product-list">
	<%= render partial: 'products', locals:{products: @products}%>
</div>

